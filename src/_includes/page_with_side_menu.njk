---
layout: layout.njk

specific_page_js:
    list:
    - description: Control side menu and toogle button
      url: '/js/sideMenu.js'

---


<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="nav-collapse collapse show pt-2 pb-4">
        <div class="sidebar-header text-center">
            <h6 class="d-inline-flex align-self-center my-1">List</h6>
        </div>

        <ul class="list-group list-unstyled">
            {%- for item in items.list %}
            <li class="list-group-item px-1 py-0" >
                <a href="#{{ item.id }}">{{ item.title }}</a>
            </li>
            {%- endfor %}
        </ul>
    </nav>


    <div id="content">
        <button type="button" id="sidebarCollapse"
            class="btn btn-info d-inline-block ml-auto mr-3"
            title="Toggle List">
            {# <i class="fas fa-list-ul"></i> #}
            <i class="fas fa-angle-double-left"></i>
        </button>

        <div class="full-list container px-0 mx-0">
            <ul class="list-group list-group-flush">
                {%- for item in items.list %}
                    {% if item.id != 'references' %}
                    <li class="list-group-item py-5" id="{{ item.id }}">
                        {% if display_link %}
                        {# <a id="{{ item.id }}" class="list-group-item" href="{{ item.url | url }}" target="{{ item.target }}"> #}
                            <p class="text-primary">{{ item.title }}</p>
                        {# </a> #}
                        {% endif %}
                        {% set img_url = data_path + item.id + gif_type %}
                        <img src="{{ img_url | url }}" class="img-fluid" alt="{{ item.title }}">
                    </li>
                    {% endif %}
                {%- endfor %}
            </ul>
        </div>

        <!-- Extra content -->
        {{ content | safe }}
    </div>

</div>
