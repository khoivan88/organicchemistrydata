---
layout: 'layouts/hansreich_base_layout.njk'

specific_page_js:
    list:
    - description: 'Control side menu and toogle button'
      url: '/js/sideMenu.js'
    - description: 'Dynamic loading of Index and Main Content'
      url: '/js/sideMenuWithDropdown.js'
    - description: 'To highlight search term'
      url: 'https://cdn.jsdelivr.net/npm/mark.js@8.11.1/dist/mark.min.js'
---

<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="align-items-start px-0 pt-3 pb-4">
        <div class="index-select pt-2 px-1 w-100">
            <select class="index custom-select" id="indexInputGroup">
                {{ content | safe }}
            </select>
            <div class="container px-0">
                <form id="scrollToLinkForm">
                    <div class="input-group input-group-sm mb-3">
                        <input id="sideMenuSearch" type="text" class="form-control border-right-0" placeholder="Search term" aria-label="Search term" aria-describedby="scrollToLinkButton" autocomplete="off">
                        <div class="input-group-append">
                            <div id="matchResult" class="d-none border-top border-bottom">
                                <span class="input-group-text px-1 py-0 border-0 bg-transparent" id="matchText"></span>
                                <button class="btn btn-sm px-1 py-0 border-0" type="button" id="prev_button"><i class="icon-angle-up" aria-hidden="true"></i></button>
                                <button class="btn btn-sm px-1 py-0 border-0" type="button" id="next_button"><i class="icon-angle-down" aria-hidden="true"></i></button>
                            </div>
                            <button class="btn btn-outline-dark" type="submit" id="scrollToLinkButton"><i class="icon-search" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <div id="navbar-left" class="container-fluid mt-5 py-5">
            <div class="index-content w-100">
            </div>
        </div>
    </nav>


    <div id="content" class="py-5">
        <button type="button" id="sidebarCollapse"
            class="btn btn-info d-inline-block ml-auto mr-3"
            title="Toggle List">
            <i class="icon-angle-double-left"></i>
        </button>

        <div class="full-list container px-3 mx-0 pb-5">
            {{ landing_content | safe }}
        </div>
    </div>

</div>


